<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->
	
	<!-- #### DELIBERATIVE AGENTS ### -->
	<agent name="deliberative-random">
		<set class-path="bin/"/>
		<set class-name="template.DeliberativeTemplate"/>
		<set algorithm="BFS"/>
	</agent>
	
	<agent name="deliberative-bfs-first">
		<set class-path="bin/"/>
		<set class-name="template.DeliberativeTemplate"/>
		<set algorithm="BFS"/>
		<set stop="First"/>
	</agent>
	
	<agent name="deliberative-bfs-best">
		<set class-path="bin/"/>
		<set class-name="template.DeliberativeTemplate"/>
		<set algorithm="BFS"/>
		<set stop="Best"/>
	</agent>
	
	<agent name="deliberative-astar-first">
		<set class-path="bin/"/>
		<set class-name="template.DeliberativeTemplate"/>
		<set algorithm="AStar"/>
		<set stop="First"/>
	</agent>
	
	<agent name="deliberative-astar-best">
		<set class-path="bin/"/>
		<set class-name="template.DeliberativeTemplate"/>
		<set algorithm="AStar"/>
		<set stop="Best"/>
	</agent>
	
	<agent name="deliberative-naive">
		<set class-path="bin/"/>
		<set class-name="template.DeliberativeTemplate"/>
		<set algorithm="Naive"/>
	</agent>
	
</agents>
