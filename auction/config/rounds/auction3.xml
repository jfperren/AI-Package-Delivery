<?xml version="1.0" encoding="UTF-8"?>

<!-- the main configuration for deliberative agents -->
<configuration name="ex4-auction">

	<!-- load settings -->
	<settings import="config/settings_auction.xml" />
	
	<!-- load the topology from an external file -->
	<topology import="config/topology/france.xml" />
	
	<!-- load agents from an external file -->
	<agents import="config/agents.xml" />
	
	<!-- define task distribution -->
	<tasks number="40" rngSeed="-5897376051029796530">
		<!--
			the probabilities, rewards and weight of tasks
		-->
		<reward distribution="constant" policy="short-distances" min="100" max="99999" />
		<probability distribution="uniform" min="0.0" max="1.0" />
		<weight distribution="uniform" min="10" max="30" />

	</tasks>
	
	<!-- the companies and vehicles in the simulation -->
	<companies>
	
		<company name="Company A">
			<!-- the first vehicle (blue) -->
			<vehicle name="Vehicle 1">
				<set color="#0000ff" />
				<set home="Paris" />
				<set speed="60" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>
			
			<!-- the second vehicle (red) -->
			<vehicle name="Vehicle 2">
				<set color="#ff0000" />
				<set home="Marseille" />
				<set speed="90" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>

			<!-- the third vehicle (magenta) -->
			<vehicle name="Vehicle 3">
				<set color="#ff00ff" />
				<set home="Brest" />
				<set speed="90" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>

            <!-- the fourth vehicle (green) -->
            <vehicle name="Vehicle 4">
                <set color="#00ff00" />
                <set home="GenÃ¨ve" />
                <set speed="90" />
                <set capacity="80" />
                <set cost-per-km="5" />
            </vehicle>
		</company>
		
		<company name="Company B">
			<!-- the fifth vehicle (yellow) -->
			<vehicle name="Vehicle 5">
				<set color="#ffff00" />
				<set home="Lyon" />
				<set speed="90" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>

			<!-- the sixth vehicle (cyan) -->
			<vehicle name="Vehicle 6">
				<set color="#00ffff" />
				<set home="Bordeaux" />
				<set speed="90" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>

            <!-- the seventh vehicle (black) -->
            <vehicle name="Vehicle 7">
                <set color="#000000" />
                <set home="Monaco" />
                <set speed="90" />
                <set capacity="80" />
                <set cost-per-km="5" />
            </vehicle>

			<!-- the eigth vehicle (grey) -->
			<vehicle name="Vehicle 8">
				<set color="#505050" />
				<set home="Strasbourg" />
				<set speed="90" />
				<set capacity="80" />
				<set cost-per-km="5" />
			</vehicle>
		</company>

	</companies>
	
</configuration>
