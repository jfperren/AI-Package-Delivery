<?xml version="1.0" encoding="ISO-8859-1"?>

<agents>
	<!-- A list of agents and their behavior classes -->
	
	<!-- #### AUCTION AGENTS ### -->
	<agent name="auction-naive">
		<set class-path="bin/"/>
		<set class-name="company.NaiveCompany"/>
	</agent>
	
	<agent name="auction-margin">
		<set class-path="bin/"/>
		<set class-name="company.ProfitMarginCompany"/>
		<set margin="1.0"/>
		<set learningRate="0.35"/>
		<set horizon="10"/>
		<set initialDiscount="0.5"/>
	</agent>
	
	<agent name="auction-opponent">
		<set class-path="bin/"/>
		<set class-name="company.OpponentCompany"/>
	</agent>
	
	<agent name="auction-smart">
		<set class-path="bin/"/>
		<set class-name="company.SmartCompany"/>
	</agent>
	
	<agent name="auction-adversarial">
		<set class-path="bin/"/>
		<set class-name="company.AdversarialCompany"/>
		<set horizon="10"/>
		<set initialDiscount="0.5"/>
	</agent>
	
	<agent name="auction-adversarial-pos">
		<set class-path="bin/"/>
		<set class-name="company.AdversarialCompany"/>
		<set horizon="10"/>
		<set initialDiscount="0.5"/>
		<set bias-add="50"/>
		<set biad-mult="1.05"/>
	</agent>
	
	<agent name="auction-adversarial-neg">
		<set class-path="bin/"/>
		<set class-name="company.AdversarialCompany"/>
		<set horizon="10"/>
		<set initialDiscount="0.5"/>
		<set bias-add="-50"/>
		<set biad-mult="0.95"/>
	</agent>
	
	<agent name="auction-afk">
		<set class-path="bin/"/>
		<set class-name="company.AFKCompany"/>
	</agent>
</agents>
